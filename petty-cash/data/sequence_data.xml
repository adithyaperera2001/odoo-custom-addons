<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Petty Cash Requests -->
        <record id="seq_petty_cash_request" model="ir.sequence">
            <field name="name">Petty Cash Request</field>
            <field name="code">petty.cash.request</field>
            <field name="prefix">PC-%(y)s-</field>
            <field name="padding">3</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="use_date_range">True</field>
            <field name="implementation">standard</field>
        </record>

        <!-- Sequence for IOU Requests -->
        <record id="seq_iou_request" model="ir.sequence">
            <field name="name">IOU Request</field>
            <field name="code">iou.request</field>
            <field name="prefix">IOU-%(y)s-</field>
            <field name="padding">3</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="use_date_range">True</field>
            <field name="implementation">standard</field>
        </record>
    </data>
</odoo>